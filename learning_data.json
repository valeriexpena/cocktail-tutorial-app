    "steps": {
      "1": {
        "text_left": "Cut an orange wedge to use for garnish.",
        "media_left": ["gifs/aperol_spritz/cut_orange.gif"],
        "text_right": "Cut the orange yourself!",
        "media_right": [
          {
            "src": "images/orange.jpg",
            "id": "orange",
            "ondragover": "event.preventDefault()",
            "ondrop": "handleDrop(event, 'orange')"
          },
          {
            "src": "images/knife.png",
            "id": "knife",
            "draggable": "true",
            "ondragstart": "handleDragStart(event)"
          },
          {
            "src": "images/orange_wedge.jpg",
            "id": "orange-wedge",
            "style": "display: none;"
          }
        ]
      },
      "2": {
        "text_left": "Fill the wine glass with cubed ice.",
        "media_left": ["gifs/aperol_spritz/ice.gif"],
        "text_right": "Drag the scoop of ice into the wine glass to place ice in it.",
        "media_right": [
          {
            "src": "images/ice_cube.png",
