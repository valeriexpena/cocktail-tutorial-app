          },
          {
            "src": "images/prosecco.png",
            "id": "prosecco",
            "draggable": "true",
            "ondragstart": "handleDragStart(event)"
          },
          {
            "src": "images/jigger.png",
            "id": "jigger",
            "ondragover": "event.preventDefault()",
            "ondrop": "handleDrop(event, 'jigger')"
          }
        ]
      },
      "4": {
        "text_left": "Stir the mixture in the wine glass with a bar spoon.",
        "media_left": ["gifs/aperol_spritz/stir.gif"],
        "text_right": "Drag the barspoon over the drink to stir.",
        "media_right": [
          {
            "src": "images/stir.jpg",
            "id": "stir",
            "draggable": "true",
            "ondragstart": "handleDragStart(event)"
          },
          {
            "src": "images/wine_glass.png",
            "id": "wine-glass",
            "ondragover": "event.preventDefault()",
            "ondrop": "handleDrop(event, 'wine-glass')"
          }
        ]
      },
      "5": {
        "text_left": "Garnish with the orange wedge and serve.",
        "media_left": ["gifs/aperol_spritz/garnish.gif"],
        "text_right": "Drag the orange wedge onto the drink.",
        "media_right": [
          {
            "src": "images/orange_wedge.jpg",
            "id": "orange-wedge",
            "draggable": "true",
            "ondragstart": "handleDragStart(event)"
          },
          {
            "src": "images/aperol_spritz_no_orange.png",
            "id": "aperol-spritz",
            "ondragover": "event.preventDefault()",
            "ondrop": "handleDrop(event, 'aperol-spritz')"
          }
        ]
      }
    },
    "quiz": {
      "1": {
        "question": "Select the correct containers to scoop ice into.",
        "type": "multiple-choice",
        "options": ["Martini glass", "Shaker", "Wine glass", "Highball glass"],
        "correct": ["Wine glass"]
      },
      "2": {
        "question": "Select the correct ingredients to add to the Aperol Spritz.",
        "type": "checkbox",
        "options": [
          "Aperitivo Bitters",
          "Soda water",
